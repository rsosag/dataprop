<main class="form-signin d-flex justify-content-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h2 class="page-title"><%= t('sign_in') %></h2>

    <div class="form-floating">
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', placeholder: t('activerecord.attributes.user.email') %>
      <%= f.label :email %>
    </div>

    <div class="form-floating">
      <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control', placeholder: t('activerecord.attributes.user.password') %>
      <%= f.label :password, class: 'form-label' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-check mb-3">
        <%= f.check_box :remember_me, class: 'form-check-input' %>
        <%= f.label :remember_me, class: 'form-check-label' %>
      </div>
    <% end %>

    <div class="form-group mb3">
      <%= f.submit t('sign_in'), class: 'w-100 btn btn-lg btn-primary' %>
    </div>

    <%= render 'devise/shared/links' %>
  <% end %>
</main>
